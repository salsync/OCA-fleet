<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Search view for Fleet Vehicle -->
    <record id="fleet_vehicle_view_search" model="ir.ui.view">
        <field name="name">fleet.vehicle.search</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_search"/>
        <field name="arch" type="xml">
            <filter name="alert_true" position="after">
                <filter string="In use" name="in_use" domain="[('in_use', '=', True)]"/>
                <separator/>
            </filter>
        </field>
    </record>

    <!-- Kanban view for Fleet Vehicle -->
    <record id="fleet_vehicle_view_kanban" model="ir.ui.view">
        <field name="name">fleet.vehicle.kanban</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_kanban"/>
        <field name="arch" type="xml">
            <templates position="before">
                <field name="in_use"/>
            </templates>
            <xpath expr="//div[hasclass('oe_kanban_details')]" position="inside">
                <!-- Replaced 'attrs' with 'modifiers' -->
                <span class="label label-primary" modifiers="{'invisible': [('in_use', '=', False)]}">In use</span>
            </xpath>
        </field>
    </record>

    <!-- Form view for Fleet Vehicle -->
    <record id="fleet_vehicle_view_form" model="ir.ui.view">
        <field name="name">fleet.vehicle.form</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button class="oe_stat_button" type="action" name="%(fleet_vehicle_usage_action_from_vehicle)d" icon="fa-calendar" string="Usage" widget="statinfo"/>
            </div>
            <field name="tag_ids" position="after">
                <!-- Replaced 'invisible' with 'modifiers' -->
                <field name="in_use" modifiers="{'invisible': [('in_use', '=', False)]}"/>
                <!-- Replaced 'attrs' with 'modifiers' -->
                <span class="label label-primary" modifiers="{'invisible': [('in_use', '=', False)]}">In use</span>
            </field>
        </field>
    </record>
</odoo>
